<%= render :partial => "admin/dashboard/sidebar" %>

<% resources.each do |key, value| %>

  <% resource = "/admin/#{key.constantize.to_resource}" %>

  <div class="resource" id="<%= key %>">

    <h2>
      <%= link_to_unless_current _(key.constantize.model_name.human.pluralize), :controller => resource, :action => "index" %>
    </h2>

    <% if @resource.name.eql?(key) %>
      <ul>
        <% value.each do |v| %>
          <li><%= v %></li>
        <% end %>
      </ul>
    <% end %>

  </div>

<% end %>
