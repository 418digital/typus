<table>

  <thead>
    <tr>
      <th>
        <%= check_box_tag "action-toggle", "", false, :class => "action-toggle" %>
      </th>
      <% headers.each do |header| %>
        <th><%= header %></th>
      <% end %>
    </tr>
  </thead>

  <% items.each do |item| %>
    <tr class="<%= cycle('even', 'odd') %>" id="<%= dom_id(item) %>">
      <td width="16">
        <%= check_box_tag "selected_item_ids[]", item.id, false, :class => "action-select" %>
      </td>
      <% table_fields_for_item(item, fields).each_with_index do |field, index| %>
        <td>
          <%= field %>
          <% if index.zero? %>
            <div class="actions">
              <%= table_actions(model, item, association_name) %>
            </div>
          <% end %>
        </td>
      <% end %>
    </tr>
  <% end %>

  <thead>
    <tr>
      <th>
        <%= check_box_tag "action-toggle", "", false, :class => "action-toggle" %>
      </th>
      <% headers.each do |header| %>
        <th><%= header %></th>
      <% end %>
    </tr>
  </thead>

</table>
