<% content_for :sidebar do %>
  <%= typus_block :new_sidebar %>
  <%= actions %>
<% end %>

<%= typus_block :new %>

<%= display_link_to_previous if params[:back_to] %>

<h2><%= link_to "Dashboard", typus_dashboard_url %> &rsaquo; <%= link_to @model.name.pluralize.titleize, :action => "index" %> &rsaquo; New</h2>

<%= typus_block :new_top %>

<% form_for @item, 
            :url  => { :action => 'create', 
                       :back_to => params[:back_to], 
                       :model => params[:model], 
                       :model_id => params[:model_id] }, 
            :html => { :multipart => true } do |f| %>
  <%= build_form %>
  <p><%= submit_tag "Create entry", :class => 'button' %></p>
<% end %>

<%= typus_block :new_bottom %>