<ul class="pager">
  <% if options[:previous] %>
    <li class="previous">
      <% message = "&larr; #{t('Previous')}".html_safe %>
      <%= link_to message, options[:previous] %>
    </li>
  <% end %>

  <% if options[:next] %>
    <li class="next">
      <% message = "#{t('Next')} &rarr;".html_safe %>
      <%= link_to message, options[:next] %>
    </li>
  <% end %>
</ul>
