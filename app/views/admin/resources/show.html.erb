<% content_for :sidebar do %>
  <%= typus_block :location => @resource[:self], :partial => 'sidebar' %>
  <%= actions %>
<% end %>

<h2><%= link_to @resource[:class].typus_human_name.pluralize, :action => 'index' %> &rsaquo; 
    <%= _("Show") %></h2>

<%= typus_block :location => @resource[:self], :partial => 'show' %>

<dl>
<%- @fields.each do |field| -%>
  <dt><%=h @resource[:class].human_attribute_name(field.first) %></dt>
  <%-
    data = case field.last
           when :boolean
             boolean_hash = @resource[:class].typus_boolean(field.first)
             status = @item.send(field.first)
             !@item.send(field.first).nil? ? boolean_hash["#{status}".to_sym] : @resource[:class].typus_options_for(:nil)
           when :belongs_to
             @item.send(field.first).typus_name
           else
             @item.send(field.first)
           end
  -%>
  <dd><%=h data %></dd>
<%- end -%>
</dl>

<%= typus_relationships %>