<%= form_tag action: 'bulk', class: 'form-inline' do %>

  <%= block.call %>

  <% if bulk_actions.any? %>
    <div class="well well-sm">
      <select id="bulk_action" name="batch_action">
        <option value="" selected="selected">Bulk actions</option>
        <% bulk_actions.each do |name, action| %>
          <option value="<%= action %>"><%= Typus::I18n.t(name) %></option>
        <% end %>
      </select>

      <%= submit_tag Typus::I18n.t('Apply'), name: nil, class: 'btn btn-default btn-xs' %>
    </div>
  <% end %>

<% end %>
