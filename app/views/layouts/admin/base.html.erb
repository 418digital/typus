<!DOCTYPE html>

<html lang="<%= I18n.locale %>">

<head>
  <%= render 'admin/shared/head' %>
</head>

<body class="base">

  <div class="container">
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <%= link_to admin_title, Typus.admin_title_link || '/', :title => Typus::I18n.t("View site"), :class => 'brand' %>
          <%= admin_apps %>
          <%= admin_login_info %>
        </div>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span3">
        <%= build_sidebar %>
      </div>
      <div class="span9">
        <%= yield :main_grid %>
      </div>
    </div>
  </div>

</body>

</html>
