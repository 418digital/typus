<!DOCTYPE html>

<html lang="<%= I18n.locale %>">

<head>
  <%= render 'admin/shared/head' %>
</head>

<body>

  <div id="wrapper">

    <div id="header">
      <div class="container_12">
        <div id="title" class="grid_12">
          <%= header %>
        </div>
      </div>

      <div id="links" class="container_12">
        <div class="grid_8">
          <div class="left">
            <%= apps %>
          </div>
        </div>

        <div class="grid_4">
          <div class="right">
            <%= login_info %>
          </div>
        </div>
      </div>
    </div>

    <div id="content">
      <div class="container_12">
        <div class="grid_<%= grid[:sidebar] %>">
          <%= yield :sidebar %>
        </div>
        <div class="grid_<%= grid[:main] %>">
          <%= yield :layout %>
        </div>
      </div>
    </div>

    <div id="footer">
      <div class="container_12">
        <div class="grid_12">
          <span class="copyright">
            Powered by <%= link_to "Typus", "http://core.typuscms.com/" %> &#183; <%= Typus.admin_sub_title.html_safe %>
          </span>
        </div>
      </div>
    </div>

  </div>

</body>

</html>
