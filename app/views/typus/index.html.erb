<h2>
<div class="left"><%= link_to @model.to_s.pluralize.capitalize, :model => params[:model], :action => "index" %></div>
<div class="right"></div>
</h2>

<div id="list">

	<!-- Query -->
	<% if request.env['QUERY_STRING'] %>
	<div class="box" id="empty">
		<p><strong><%= params[:model].capitalize %></strong> where <%= process_query(request.env['QUERY_STRING']) %> <%= link_to "remove filter?", :action => "index", :model => params[:model] %></p>
	</div>
	<script type="text/javascript">new Effect.Highlight('empty');</script>
	<% end %>
	<!-- /Query -->

	<!-- Listing -->
	<% if @items.size > 0 -%>
		<%= render :partial => "table" %>
		<%= will_paginate @items %>
	<% end %>
	<!-- /Listing -->

	<% if @model.count == 0 %>
	<p><%= link_to "Add the first #{params[:model].singularize}", :action => "new", :model => params[:model] %></p>
	<% end %>

</div>