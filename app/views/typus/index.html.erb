<% content_for :sidebar do %>
	<%= actions %>
	<%= search %>
	<%= filters %>
<% end %>

<h2><%= params[:model].capitalize %></h2>

<div id="list">

	<!-- Query -->
	<% if params[:query] %>
	<div class="box" id="empty">
		<p><%= process_query(request.env['QUERY_STRING']) %>. <%= link_to "Remove filter?" %></p>
	</div>
	<script type="text/javascript">new Effect.Highlight('empty');</script>
	<% end %>
	<!-- /Query -->

	<!-- Listing -->
	<% if @items.size > 0 -%>
		<%= typus_table %>
		<%= will_paginate @items %>
	<% end %>
	<!-- /Listing -->

	<% if @model.count == 0 %>
	<p><%= link_to "Add the first #{params[:model].singularize}", :action => "new" %></p>
	<% end %>

</div>