<% form_tag :action => 'reset_password' do %>
  <p><label for="password">Password</label>
  <%= password_field :user, :password, :size => "20", :class => "title" %></p>
  <p><label for="password">Password Confirm</label>
  <%= password_field :user, :password_confirmation, :size => "20", :class => "title" %></p>
  <%= hidden_field :user, :token, :value => params[:token] %>
  <p><%= submit_tag "Change password", :class => 'button' %></p>
<% end %>